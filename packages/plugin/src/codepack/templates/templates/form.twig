{% extends "demo/templates/_layout" %}

{% set pageTitle = "Viewing " ~ craft.app.request.segment(4) ~ " on " ~ craft.app.request.segment(3)|title|replace({'-':' '}) ~ " template" %}
{% set page = "bootstrap" %}

{% block content %}

    {% if form %}
    
        <div class="freeform-page-heading">
            <h2>{{ form.name }}</h2>
        </div>

        {{ form.render }}

    {% else %}

        <div class="freeform-warning-notice">
            Sorry, a form with the handle of <code>{{ formHandle }}</code> does not exist.
        </div>

    {% endif %}

{% endblock %}