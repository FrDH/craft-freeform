{% extends "demo/templates/_layout" %}

{% set pageTitle = "Select a Form" %}
{% set page = "bootstrap" %}

{% block content %}

    <div class="freeform-page-heading">
        <h2>Select a Form</h2>
        <p>Choose a form from below that you'd like to see go through the Freeform demo simulator.</p>
    </div>

    {% if forms %}

        <div class="freeform-forms-grid">
        {% for form in forms %}
            <style>.freeform-forms-grid-item-{{ form.id }}{border-top:7px solid {{ form.color }}!important;}.freeform-forms-grid-item-{{ form.id }}:hover{background:{{ form.color }}!important;}</style>
            <a href="{{ siteUrl }}demo/templates/{{ pageTemplate }}/{{ form.handle }}" class="freeform-forms-grid-item freeform-forms-grid-item-{{ form.id }}">
                <h3>{{ form.name }}</h3>
                <p>{{ form.description|truncate(50, '...') }}</p>
                <p class="freeform-submission-count">{{ craft.freeform.submissions({formId: form.id}).count }} submissions, {{ craft.freeform.submissions({formId: form.id, isSpam: true}).count }} spam</p>
            </a>
        {% endfor %}
        </div>

    {% else %}

        <div class="freeform-warning-notice">
            Sorry, no forms exist for this site yet.
        </div>

    {% endif %}

{% endblock %}